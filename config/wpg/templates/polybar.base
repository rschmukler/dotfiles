[colors]
background = #0000000
; background = {color8}
foreground = {color15}
active = {active}
inactive = {inactive}
highlight = {color2}
error = {color9}

[bar/wpgtk-monitor-secondary]
width = 100%
height = 24
offset-y = 0%
radius = 0.0
fixed-center = true
monitor = DP-4
enable-ipc = true

background = ${{colors.background}}
foreground = ${{colors.foreground}}

line-size = 0
label-line-color = #f00

border-top-size = 8
border-left-size = 12
border-right-size = 12
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = menlo:fontformat=truetype:size=8;1
font-1 = "Font Awesome 5 Free:style=Regular:pixelsize=10;2"
font-2 = "Font Awesome 5 Free Solid:style=Regular:pixelsize=10;2"
font-3 = "Font Awesome 5 Brands:style=Regular:pixelsize=10;2"

modules-left = bspwm xwindow
tray-position = none

[bar/wpgtk-monitor-primary]
width = 100%
height = 28
offset-y = 0%
radius = 0.0
fixed-center = true
monitor = DP-2
dpi = 128

background = ${{colors.background}}
foreground = ${{colors.foreground}}

line-size = 0
label-line-color = #f00

border-top-size = 8
border-left-size = 12
border-right-size = 12
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = menlo:fontformat=truetype:size=8;1
font-1 = "Font Awesome 5 Free:style=Regular:pixelsize=10;2"
font-2 = "Font Awesome 5 Free Solid:style=Regular:pixelsize=10;2"
font-3 = "Font Awesome 5 Brands:style=Regular:pixelsize=10;2"

modules-left = bspwm xwindow
modules-center = date
modules-right = pomo volume
enable-ipc = true

; tray-position = none
; tray-padding = 10
; tray-background = ${{colors.inactive}}

[module/xwindow]
type = internal/xwindow
format-background = ${{colors.active}}
label = %title:0:45: ...%
format-padding = 4
format-margin = 2

[module/bspwm]
type = internal/bspwm

ws-icon-0 = code;
ws-icon-1 = web;
ws-icon-2 = music;
ws-icon-3 = chat;
ws-icon-default = 

enable-click = true
enable-scroll = true
fuzzy-match = true

label-focused = %icon% %index%
label-focused-background = ${{colors.active}}
label-focused-padding = 2

label-occupied = %icon% %index%
label-occupied-background = ${{colors.inactive}}
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${{colors.active}}
label-urgent-padding = 2

label-empty =
label-empty-foreground = ${{colors.foreground}}

[module/i3]
type = internal/i3
format = <label-mode><label-state>
index-sort = true
wrapping-scroll = false
fuzzy-matching = true

; Only show workspaces on the same output as the bar
pin-workspaces = true

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 9;
ws-icon-3 = 10;
ws-icon-default = 

label-mode-padding = 1
label-mode-foreground = ${{colors.foreground}}
label-mode-background = ${{colors.highlight}}

label-focused-background = ${{colors.active}}
label-focused-padding = 1

label-unfocused-padding = 1
label-unfocused-background = ${{colors.inactive}}

label-visible-background = ${{colors.highlight}}
label-visible-padding = 1

label-urgent-background = ${{colors.highlight}}
label-urgent-padding = 1

[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-play = ⏵
icon-pause = ⏸
icon-stop = ⏹
icon-prev = ⏮
icon-next = ⏭

label-song-maxlen = 25
label-song-ellipsis = true
format-playing-padding = 2
format-playing-background = ${{colors.highlight}}

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected-padding = 1
format-connected = <ramp-signal> <label-connected>
label-connected = %essid%
format-connected-background = ${{colors.active}}

format-disconnected =

ramp-signal-0 = 
ramp-signal-foreground = ${{colors.foreground}}

[module/eth]
type = internal/network
interface = enp0s25
interval = 3.0

format-connected =  <label-connected>
format-connected-padding = 1
format-connected-background = ${{colors.active}}
label-connected = %local_ip%


[module/date]
type = internal/date
interval = 5

date = "%d %b %Y, "
time = %I:%M %p

format-padding = 1
format-background = ${{colors.background}}

label = %date%%time%

[module/volume]
type = internal/alsa

format-volume = <ramp-volume> <label-volume>
format-volume-padding = 1
format-volume-background = ${{colors.active}}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 
ramp-volume-foreground = ${{colors.foreground}}

format-muted-prefix = " "
format-muted-foreground = ${{colors.background}}
format-muted-background = ${{colors.error}}
label-muted = MUTED
format-muted-padding = 1

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 100

format-charging =   <animation-charging> <label-charging>
format-charging-padding = 1
format-discharging-padding = 1
format-discharging = <ramp-capacity> <label-discharging>
format-full = <label-full> <ramp-capacity>
format-full-padding = 1
format-full-background = ${{colors.active}}

ramp-capacity-0 = 
ramp-capacity-1 =  
ramp-capacity-2 =  
ramp-capacity-3 = 
ramp-capacity-4 =  
ramp-capacity-foreground = ${{colors.foreground}}

animation-charging-foreground = ${{colors.foreground}}
animation-charging-framerate = 500
animation-charging-0 = 
animation-charging-1 =  
animation-charging-2 =  
animation-charging-3 = 
animation-charging-4 =  
format-charging-background = ${{colors.highlight}}
format-discharging-background = ${{colors.active}}

[module/pomo]
type = custom/script
interval = 1
exec = $HOME/.local/bin/pomo status
format-padding = 4
format-margin = 2
format-background = ${{colors.active}}


[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 0

; vim:ft=dosini
